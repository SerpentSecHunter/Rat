# =============================================================================
# BOT TELEGRAM CONFIGURATION
# =============================================================================

# Bot Token dari @BotFather (WAJIB DIISI)
# Cara dapat: Chat @BotFather -> /newbot -> ikuti instruksi
BOT_TOKEN=8384419176:AAGVyKuDiv-fBhfRV8freoWdbkspVwrowS0

# Chat ID (Optional - akan auto detect saat /start)
# Cara dapat: Chat @userinfobot untuk tahu chat ID Anda
CHAT_ID=7089440829

# =============================================================================
# BOT SETTINGS
# =============================================================================

# Bot Status (true/false)
BOT_ACTIVE=true

# Auto Start Bot saat buka Termux (true/false)
AUTO_START=false

# Debug Mode untuk development (true/false)
DEBUG_MODE=false

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Working Directory (default: current directory)
WORK_DIR=

# Log Level (INFO, DEBUG, WARNING, ERROR)
LOG_LEVEL=INFO

# Max Command Timeout (seconds)
COMMAND_TIMEOUT=60

# Max File Size untuk upload (bytes) - 50MB default
MAX_FILE_SIZE=52428800

# =============================================================================
# TERMUX:API SETTINGS
# =============================================================================

# Termux:API Auto Check (true/false)
API_AUTO_CHECK=true

# Camera Default (0=back, 1=front)
DEFAULT_CAMERA=1

# GPS Timeout (seconds)
GPS_TIMEOUT=30

# Photo Quality (0-100)
PHOTO_QUALITY=85

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Allowed Users (comma separated chat IDs) - kosong = semua user
ALLOWED_USERS=

# Admin Chat ID (untuk notifikasi khusus)
ADMIN_CHAT_ID=

# Rate Limit (commands per minute)
RATE_LIMIT=30

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Auto Install Missing Packages (true/false)
AUTO_INSTALL=true

# Cleanup Temp Files (true/false)
AUTO_CLEANUP=true

# System Monitor Interval (seconds)
MONITOR_INTERVAL=1

# File Search Max Results
SEARCH_MAX_RESULTS=20

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Send Startup Notification (true/false)
STARTUP_NOTIFICATION=true

# Send Error Notifications (true/false)
ERROR_NOTIFICATION=true

# Send System Alerts (true/false)
SYSTEM_ALERTS=false

# =============================================================================
# BACKUP & LOGGING
# =============================================================================

# Log File Path
LOG_FILE=bot.log

# Config Backup (true/false)
CONFIG_BACKUP=true

# Max Log File Size (MB)
MAX_LOG_SIZE=10

# Log Retention Days
LOG_RETENTION=7

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Enable Web Interface (experimental)
WEB_INTERFACE=false

# Web Port (jika web interface aktif)
WEB_PORT=8080

# Enable API Endpoints (experimental)
API_ENDPOINTS=false

# =============================================================================
